<%- include('base.ejs') %>
 <link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/forms.css">
 <link rel="stylesheet" href="/css/product.css">
</head>

<body>

<%- include('nav.ejs') %>

<main>
    <div class="grid">
        <% for (var i = 0; i < prof.length; i++) { %>
        <% var pro = prof[i]; %>
    <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"> My Profile 
                        </h1>
                    </header>
                    
                    <div class="card__content">
                        <h3 class="product__description">Name: 
                            <%= pro.name_fn %>
                        </h3>
						<h3 class="product__description">Gender: 
                            <%= pro.gender %>
                        </h3>
                        <h3 class="product__description">Age: 
                            <%= pro.age %>
                        </h3>
						<h3 class="product__description">Experience: 
                            <%= pro.experience %>
                        </h3>
						<h3 class="product__description">Salary: 
                            <%= pro.salary %>
                        </h3>
						<h3 class="product__description">Role: 
                            <%= pro.role %>
                        </h3>
                    </div>
    </article>
        <% } %>
	</div>
	<div class="grid">
		<h1 class="product__title"> My Orders
		</h1>

		<table class="table table-bordered table-dark">
			<thead>
			  <tr>
				<th scope="col">Order No.</th>
				<th scope="col">Dish</th>
				<th scope="col">Comleted</th>
				<th scope="col">Button</th>
			  </tr>
			</thead>

			<tbody>
		<% for (var i = 0; i < orders.length; i++) { %>
			<% var order = orders[i]; %>
				<tr>
				<th scope="row"><%= i+1 %></th>
				<td> <%= order.dish %></td>
				<td> <%= order.completed %> </td>
				<td></td>
				</tr>
			<% } %>
		</tbody>
		</table>
    </div>
</main>
</body>
