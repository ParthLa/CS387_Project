<%- include('base.ejs') %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 
<link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/forms.css">
 <link rel="stylesheet" href="/css/product.css">
 
</head>

<body>

<%- include('nav.ejs') %>

<main>
    <div style="width:800px; margin:0 auto;">
        <% for (var i = 0; i < prof.length; i++) { %>
        <% var pro = prof[i]; %>
    <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"> My Profile 
                        </h1>
                    </header>
                    
                    <div class="card__content">
                        <h3 class="product__description">Name: 
                            <%= pro.name_fn %>
                        </h3>
						<h3 class="product__description">Gender: 
                            <%= pro.gender %>
                        </h3>
                        <h3 class="product__description">Age: 
                            <%= pro.age %>
                        </h3>
						<h3 class="product__description">Experience: 
                            <%= pro.experience %>
                        </h3>
						<h3 class="product__description">Salary: 
                            <%= pro.salary %>
                        </h3>
						<h3 class="product__description">Role: 
                            <%= pro.role %>
                        </h3>
                    </div>
    </article>
        <% } %>
	</div>
	<div class="grid">
		<h1 class="product__title"> My Orders
		</h1>

		<table class="table table-bordered table-dark">
			<thead>
			  <tr>
				<th scope="col">Order No.</th>
				<th scope="col">Order ID</th>
				<th scope="col">Dish</th>
				<th scope="col">Comleted</th>
				<th scope="col">Button</th>
			  </tr>
			</thead>

			<tbody>
		<% for (var i = 0; i < orders.length; i++) { %>
			<% var order = orders[i]; %>
				<tr>
				<th scope="row"><%= i+1 %></th>
				<td> <%= order.order_id %></td>
				<td> <%= order.dish %></td>
				<td> <p class="product__description">
					<%= order.completed %> 
					</p>
				</td>
				<td>
					<form action="/employee" method="post">
						<button class="btn" type="submit">Cook/Serve</button> 
						<input type="hidden" name="id" value="<%= order.id %>">
						<input type="hidden" name="order_id" value="<%= order.order_id %>">
					   <input type="hidden" name="dish_id" value="<%= order.dish_id %>">
					</form>
				</td>
				</tr>
			<% } %>
		</tbody>
		</table>
    </div>
</main>
</body>
