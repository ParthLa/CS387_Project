<%- include('base.ejs') %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 
<link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/forms.css">
 <link rel="stylesheet" href="/css/product.css">
 
</head>

<body>
<%- include('nav.ejs') %>
<main>
<div class="grid">
    <h1 class="product__title"> My Employees
    </h1>

    <form action="/empl" method="get">
        <button class="btn" type="submit">Add New Employee</button>
    </form>

    <table class="table table-bordered table-dark">
        <thead>
          <tr>
            <th scope="col">Employee ID</th>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Experience</th>
            <th scope="col">Role</th>
            <th scope="col">Update</th>
          </tr>
        </thead>

        <tbody>

        <% for (var i = 0; i < empl.length; i++) { %>
        <% var emp = empl[i]; %>
        <tr>
            <th scope="row"><%= emp.id %></th>
            <td> <%= emp.name_fn %></td>
            <td> <%= emp.gender %></td>
            <td> <%= emp.age %></td>
            <td> <%= emp.salary %></td>
            <td> <%= emp.experience %></td>
            <td> <%= emp.role %></td>
            <td>
                <form action="/empl" method="post">
                    <button class="btn" type="submit">Update</button> 
                    <input type="hidden" name="id" value="<%= emp.id %>">
                   
                </form>
            </td>

            </tr>


        <% } %>
  </div>

  <div class="grid">
    <h1 class="product__title"> Inventory
    </h1>

    <form action="/invent" method="get">
        <button class="btn" type="submit">Add New Inventory</button>
    </form>

    <table class="table table-bordered table-dark">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Increment</th>
          </tr>
        </thead>

        <tbody>

        <% for (var i = 0; i < invs.length; i++) { %>
        <% var inv = invs[i]; %>
        <tr>
            <th scope="row"><%= inv.ingredient_id %></th>
            <td> <%= inv.ingredient_name %></td>
            <td>
                <form action="/owner" method="post">
                    <button class="btn" type="submit">Increment</button> 
                    <input type="hidden" name="id" value="<%= inv.id %>">
                   
                </form>
            </td>

            </tr>


        <% } %>
  </div>
  
  <div class="grid">
    <h1 class="product__title"> Order History and Analytics
    </h1>

    <table class="table table-bordered table-dark">
        <thead>
          <tr>
            <th scope="col">Dish Name</th>
            <th scope="col">Number of Orders</th>
          </tr>
        </thead>

        <tbody>

        <% for (var i = 0; i < orders_all.length; i++) { %>
        <% var order = orders_all[i]; %>
        <tr>
            <th scope="row"><%= order.name %></th>
            <td> <%= order.num_orders %></td>

            </tr>


        <% } %>
  </div>

</main>
</body>
